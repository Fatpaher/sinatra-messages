Please leave a message
%form{ class: 'form', action: '/', method: 'POST' }
  .hidden
    %input{ type: 'text',
      id: 'encrypted_text_id',
      name: 'message[encrypted_text]',
      disabled: 'disabled'}

    %input{ type: 'text',
      id: 'iv_id',
      name: 'message[encrypted_text_iv]',
      disabled: 'disabled'}

  %label{ for: 'text_id' }
    Message
  %input{ class: 'message_form',
    id: 'text_id',
    type: 'text',
    name: 'message[text]' }
  %br

  %input{ type: 'checkbox',
    id: 'password_checkbox_id',
    name: 'message[password]',
    value: 'true' }
  %label{ for: 'password_checkbox_id' }
    With password

  %br
  #password_id.hidden
    %label{ for: 'password_field_id' }
      Password
      %input{ class: 'message_form',
        id: 'password_field_id',
        disabled: 'disabled',
        type: 'password'}

  .radio_buttons
    %br
    .visit
      %input{ type: 'radio',
        id: 'radio_visit_id',
        value: 'visit',
        name: 'message[option]',
        checked: 'checked' }
      %label{ for: 'radio_visit_id' }
        Delete after visit

      #visit_id
        %label{ for: 'visit_field_id' }
          Number of visits
        %input{ type: 'number',
          id: 'visit_field_id',
          value: 1,
          name: 'message[option_value]' }

    .hour
      %input{ type: 'radio',
        id: 'radio_hour_id',
        value: 'hour',
        name: 'message[option]'}
      %label{ for: 'radio_hour_id' }
        Delete after hour

      #hour_id.hidden
        %label{ for: 'hour_field_id' }
          Number of hours
        %input{ type: 'number',
          id: 'hour_field_id',
          value: 1,
          name: 'message[option_value]',
          disabled: 'disabled' }

  %br
  %input{ type: 'submit', value: 'Save' }

